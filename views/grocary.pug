extends layout
block content
  h1= title
  - let results = [{tomatovalue:9, onionvalue:4, capsicumvaluve:1},{tomatovalue:6 , onionvalue:7, capsicumvaluve:2},{tomatovalue:7 , onionvalue:1, capsicumvaluve:3}]
  div(class="container-fluid mt-3")
  div(class="row")
    each temp,index in results
        div(class="col-sm-2" )  #{temp.tomatovalue} -  #{temp.onionvalue} - #{temp.capsicumvaluve}
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<results.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{results[i].tomatovalue}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }